<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <include layout="@layout/layout_title" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_14"
        android:background="#F6F6F6" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/size_10">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="人员姓名"
            android:textColor="#ff333333"
            android:textSize="14dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="*"
            android:textColor="#F43323" />

        <EditText
            android:id="@+id/et_add_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/size_12"
            android:background="@null"
            android:hint="请输入人员姓名（必填）"
            android:textColorHint="#ffcbcbcb"
            android:textColor="#333333"
            android:textSize="14dp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_0.1"
        android:layout_marginLeft="@dimen/size_10"
        android:background="#fff0f0f0" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/size_10">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="手机号"
            android:textColor="#ff333333"
            android:textSize="@dimen/text_size_14" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="*"
            android:textColor="#F43323" />

        <EditText
            android:id="@+id/et_add_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/size_27"
            android:background="@null"
            android:hint="请输入手机号（必填）"
            android:inputType="number"
            android:textColorHint="#ffcbcbcb"
            android:textColor="#333333"
            android:textSize="@dimen/text_size_14" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_0.1"
        android:layout_marginLeft="@dimen/size_10"
        android:background="#fff0f0f0" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/size_10">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="职位"
            android:textColor="#ff333333"
            android:textSize="@dimen/text_size_14" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="*"
            android:textColor="#F43323" />

        <EditText
            android:id="@+id/et_add_zhiwei"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/size_42"
            android:background="@null"
            android:hint="请输入职位（必填）"
            android:textColorHint="#ffcbcbcb"
            android:textColor="#333333"
            android:textSize="@dimen/text_size_14" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_0.1"
        android:layout_marginLeft="@dimen/size_10"
        android:background="#fff0f0f0" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/size_10">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="部门"
            android:textColor="#ff333333"
            android:textSize="@dimen/text_size_14" />

        <TextView
            android:id="@+id/tv_add_dept"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/size_49"
            android:text=""
            android:textColor="#333333" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_0.1"
        android:layout_marginLeft="@dimen/size_10"
        android:background="#fff0f0f0" />

    <LinearLayout
        android:id="@+id/ll_role"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/size_10">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="角色"
            android:textColor="#ff333333"
            android:textSize="@dimen/text_size_14" />

        <TextView
            android:id="@+id/tv_add_jiaose"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/size_49"
            android:ellipsize="end"
            android:text="请选择角色"
            android:textColor="#333333" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_0.1"
        android:layout_marginLeft="@dimen/size_10"
        android:background="#fff0f0f0" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/size_10">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="工号"
            android:textColorHint="#ffcbcbcb"
            android:textColor="#333333"
            android:textSize="@dimen/text_size_14" />

        <EditText
            android:id="@+id/et_add_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/size_49"
            android:background="@null"
            android:hint="选填"
            android:inputType="number"
            android:textColor="#CBCBCB"
            android:textSize="@dimen/text_size_14" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_0.1"
        android:layout_marginLeft="@dimen/size_10"
        android:background="#fff0f0f0" />

    <LinearLayout
        android:id="@+id/ll_gongxu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/size_10">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="工序"
            android:textColor="#ff333333"
            android:textSize="@dimen/text_size_14" />

        <TextView
            android:id="@+id/tv_add_gongxu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/size_49"
            android:text="请选择工序"
            android:textColor="#333333"
            android:textSize="@dimen/text_size_14" />
    </LinearLayout>
</LinearLayout>