<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/size_6"
        android:paddingLeft="@dimen/size_10"
        android:paddingRight="@dimen/size_20"
        android:paddingTop="@dimen/size_6">

        <CheckBox
            android:id="@+id/checkbox"
            android:layout_width="@dimen/size_12"
            android:layout_height="@dimen/size_12"
            android:layout_centerVertical="true"
            android:background="@drawable/selector_check"
            android:button="@null" />

        <com.qysd.uikit.common.ui.imageview.HeadImageView
            android:id="@+id/iv_person"
            android:layout_width="@dimen/size_30"
            android:layout_height="@dimen/size_30"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/size_16"
            android:layout_toRightOf="@id/checkbox"
            android:src="@drawable/ic_lianxiren_default" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/size_13"
            android:layout_toRightOf="@id/iv_person"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="宋江"
                android:textColor="#000000"
                android:textSize="@dimen/text_size_13" />

            <TextView
                android:id="@+id/tv_department"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="宋江"
                android:textSize="@dimen/text_size_11" />
        </LinearLayout>


    </RelativeLayout>


</LinearLayout>