<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <include layout="@layout/layout_title" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size_10"
            android:background="@color/white"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:paddingBottom="@dimen/size_10"
                android:paddingLeft="@dimen/size_10"
                android:paddingRight="@dimen/size_10"
                android:paddingTop="@dimen/size_10">

                <ImageView
                    android:layout_width="@dimen/size_13"
                    android:layout_height="@dimen/size_13"
                    android:src="@drawable/ic_task_manager_date" />

                <TextView
                    android:id="@+id/tv_complete_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/size_10"
                    android:text="完成日期：2017/10/10"
                    android:textColor="#ff000000"
                    android:textSize="@dimen/text_size_13" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_1"
                android:layout_marginLeft="@dimen/size_10"
                android:layout_marginRight="@dimen/size_10"
                android:background="#F0F0F0" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:paddingBottom="@dimen/size_10"
                android:paddingLeft="@dimen/size_10"
                android:paddingRight="@dimen/size_10"
                android:paddingTop="@dimen/size_10">

                <ImageView
                    android:layout_width="@dimen/size_13"
                    android:layout_height="@dimen/size_13"
                    android:src="@drawable/ic_task_manager_data" />

                <TextView
                    android:id="@+id/tv_task_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/size_10"
                    android:text="任务预期完成数量为 300 只，请输入实际完成数量"
                    android:textColor="#ff000000"
                    android:textSize="@dimen/text_size_13" />
            </LinearLayout>

            <EditText
                android:id="@+id/et_task_num"
                android:layout_width="@dimen/size_152"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/size_14"
                android:layout_marginLeft="@dimen/size_30"
                android:inputType="number"
                android:background="@drawable/bg_gray_radius"
                android:gravity="center"
                android:hint="0" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:paddingBottom="@dimen/size_10"
                android:paddingLeft="@dimen/size_10"
                android:paddingRight="@dimen/size_10"
                android:paddingTop="@dimen/size_10">

                <ImageView
                    android:layout_width="@dimen/size_13"
                    android:layout_height="@dimen/size_13"
                    android:src="@drawable/ic_task_manager_beizhu" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/size_10"
                    android:text="完工备注"
                    android:textColor="#ff000000"
                    android:textSize="@dimen/text_size_13" />

            </LinearLayout>

            <EditText
                android:id="@+id/et_task_remarks"
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_190"
                android:layout_marginBottom="@dimen/size_14"
                android:layout_marginLeft="@dimen/size_30"
                android:layout_marginRight="@dimen/size_10"
                android:background="@null"
                android:gravity="left"
                android:hint="请填写完工备注"
                android:textColor="#CBCBCB"
                android:textColorHint="#CBCBCB"
                android:textSize="@dimen/size_13" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginBottom="@dimen/size_10"
                android:layout_marginRight="@dimen/size_10"
                android:text="140字"
                android:textColor="#ff333333"
                android:textSize="@dimen/text_size_13" />
        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/tv_complete_query"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_36"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/size_17"
        android:layout_marginLeft="@dimen/size_10"
        android:layout_marginRight="@dimen/size_10"
        android:background="@drawable/bg_blue_radius"
        android:gravity="center"
        android:text="提交"
        android:textColor="@color/white" />
</RelativeLayout>