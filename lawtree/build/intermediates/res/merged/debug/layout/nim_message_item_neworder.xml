<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <FrameLayout
        android:id="@+id/message_item_snap_chat_body"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/size_10"
        android:background="@color/white">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:background="@color/blue_03"
                    android:textSize="@dimen/size_8"
                    android:text="NEW"/>
                <TextView
                    android:id="@+id/tv_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/size_9"
                    android:textColor="@color/blue_03"
                    android:textSize="@dimen/size_15"
                    android:text="收到一笔新订单！"/>
            </LinearLayout>
            <TextView
                android:id="@+id/message_item_neworder_chat"
                android:layout_width="@dimen/size_225"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size_8"
                android:layout_gravity="center_vertical"
                android:textColor="@color/text_hint_01"
                android:textSize="@dimen/size_13"
                android:text="河北橡皮厂有限公司向您发来一笔新 的定制产品订"
                android:padding="0dip" />
        </LinearLayout>
        <include layout="@layout/nim_message_item_thumb_progress_bar_text" />

    </FrameLayout>

    <RelativeLayout
        android:id="@+id/message_item_tips_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom">

        <TextView
            android:id="@+id/message_item_snap_chat_readed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@+id/message_item_snap_chat_tips_label"
            android:layout_marginBottom="3dip"
            android:layout_marginLeft="3dp"
            android:background="@color/transparent"
            android:text="@string/readed"
            android:textColor="#666666"
            android:textSize="12sp"
            android:visibility="gone"/>

    </RelativeLayout>

</LinearLayout>