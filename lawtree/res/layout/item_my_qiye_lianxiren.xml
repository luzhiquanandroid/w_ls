<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size_7"
        android:paddingLeft="@dimen/size_10"
        android:paddingRight="@dimen/size_20">

        <com.qysd.uikit.common.ui.imageview.HeadImageView
            android:id="@+id/iv_person"
            android:layout_width="@dimen/size_30"
            android:layout_height="@dimen/size_30"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_lianxiren_default" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/size_13"
            android:layout_toRightOf="@id/iv_person"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="阿张"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_13" />

            <TextView
                android:id="@+id/tv_department"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="张记糖厂-总经理"
                android:textSize="@dimen/text_size_11" />
        </LinearLayout>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_0.1"
        android:layout_marginLeft="@dimen/size_10"
        android:layout_marginTop="@dimen/size_7"
        android:background="#F0F0F0" />
</LinearLayout>