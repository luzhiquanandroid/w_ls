<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#fff0f0f0" />

    <LinearLayout
        android:id="@+id/ll_search"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_28"
        android:layout_marginLeft="@dimen/size_14"
        android:layout_marginRight="@dimen/size_14"
        android:layout_marginTop="@dimen/size_10"
        android:background="@drawable/bg_search"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_lianxiren_search"
            android:drawablePadding="@dimen/size_8"
            android:text="搜索"
            android:textColor="#B2B4B6"
            android:textSize="@dimen/text_size_15" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_7"
        android:layout_marginTop="@dimen/size_7"
        android:background="#F6F6F6" />

    <RelativeLayout
        android:id="@+id/rl_my_qiye"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/iv_my_qy_icon"
            android:layout_width="@dimen/size_30"
            android:layout_height="@dimen/size_30"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/size_10"
            android:src="@drawable/ic_wodeqiye" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/size_14"
            android:layout_toRightOf="@id/iv_my_qy_icon"
            android:text="我的企业"
            android:textColor="#000000"
            android:textSize="@dimen/text_size_14" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/iv_my_qy_icon"
            android:layout_marginTop="@dimen/size_9"
            android:layout_toRightOf="@id/iv_my_qy_icon"
            android:background="#fff0f0f0" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_waibu_qiye"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/iv_wb_qy_icon"
            android:layout_width="@dimen/size_30"
            android:layout_height="@dimen/size_30"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/size_10"
            android:src="@drawable/ic_waibuqiye" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/size_14"
            android:layout_toRightOf="@id/iv_wb_qy_icon"
            android:text="外部企业"
            android:textColor="#000000"
            android:textSize="@dimen/text_size_14" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/iv_wb_qy_icon"
            android:layout_marginTop="@dimen/size_9"
            android:layout_toRightOf="@id/iv_wb_qy_icon"
            android:background="#fff0f0f0" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_wode_qunzu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/iv_my_group_icon"
            android:layout_width="@dimen/size_30"
            android:layout_height="@dimen/size_30"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/size_10"
            android:src="@drawable/ic_wodequnzu" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/size_14"
            android:layout_toRightOf="@id/iv_my_group_icon"
            android:text="我的群组"
            android:textColor="#000000"
            android:textSize="@dimen/text_size_14" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_7"
        android:layout_marginTop="@dimen/size_6"
        android:background="#F6F6F6" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/size_10"
        android:layout_marginTop="@dimen/size_5"
        android:text="我的好友"
        android:textColor="#000000"
        android:textSize="@dimen/text_size_14" />

    <RelativeLayout
        android:id="@+id/rl_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:paddingBottom="@dimen/size_9"
        android:paddingTop="@dimen/size_9">

        <ImageView
            android:id="@+id/iv_new_friend_icon"
            android:layout_width="@dimen/size_30"
            android:layout_height="@dimen/size_30"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/size_10"
            android:src="@drawable/ic_wodeqiye" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/size_14"
            android:layout_toRightOf="@id/iv_new_friend_icon"
            android:text="新的好友"
            android:textColor="#000000"
            android:textSize="@dimen/text_size_14" />

        <TextView
            android:id="@+id/tv_newFriend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/size_30"
            android:background="@drawable/round_corner"
            android:text="0"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_12"
            android:visibility="invisible" />
    </RelativeLayout>

</LinearLayout>