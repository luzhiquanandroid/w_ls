<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <include layout="@layout/layout_title"/>

    <RelativeLayout
        android:id="@+id/rl_personinfo"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_110"
        android:padding="@dimen/size_15">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/size_10"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_size_19"
                    android:textColor="@color/black_02"
                    android:text="张三三"/>
                <TextView
                    android:id="@+id/tv_position"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_size_11"
                    android:layout_marginLeft="@dimen/size_5"
                    android:background="@drawable/text_blue_radius"
                    android:paddingLeft="@dimen/size_5"
                    android:paddingRight="@dimen/size_5"
                    android:textColor="@color/white"
                    android:text="人事"/>
            </LinearLayout>
            <TextView
                android:id="@+id/tv_companyname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size_5"
                android:textColor="@color/black_01"
                android:textSize="@dimen/text_size_12"
                android:text="河北圣橡皮有限公司"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size_10"
                android:drawableLeft="@drawable/ic_edit"
                android:textColor="@color/black_02"
                android:textSize="@dimen/text_size_12"
                android:text="编辑"/>
        </LinearLayout>
        <ImageView
            android:id="@+id/iv_header"
            android:layout_width="@dimen/size_63"
            android:layout_height="@dimen/size_63"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_person"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_myzxing"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/size_16"
        android:paddingBottom="@dimen/size_16"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/size_10"
        android:paddingRight="@dimen/size_10">
        <ImageView
            android:layout_width="@dimen/size_21"
            android:layout_height="@dimen/size_21"
            android:src="@drawable/ic_scan"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/size_30"
            android:text="我的二维码"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_right_jt"/>
    </RelativeLayout>
    <View style="@style/line_view_horizontal"/>
    <RelativeLayout
        android:id="@+id/rl_mybusiness"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/size_16"
        android:paddingBottom="@dimen/size_16"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/size_10"
        android:paddingRight="@dimen/size_10">
        <ImageView
            android:layout_width="@dimen/size_21"
            android:layout_height="@dimen/size_21"
            android:src="@drawable/ic_qiye"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/size_30"
            android:text="我的企业"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_right_jt"/>
    </RelativeLayout>
    <View style="@style/line_view_horizontal"/>
    <RelativeLayout
        android:id="@+id/rl_account_and_security"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/size_16"
        android:paddingBottom="@dimen/size_16"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/size_10"
        android:paddingRight="@dimen/size_10">
        <ImageView
            android:layout_width="@dimen/size_21"
            android:layout_height="@dimen/size_21"
            android:src="@drawable/ic_account"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/size_30"
            android:text="账号与安全"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_right_jt"/>
    </RelativeLayout>
    <View style="@style/line_view_horizontal"/>
    <RelativeLayout
        android:id="@+id/rl_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/size_16"
        android:paddingBottom="@dimen/size_16"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/size_10"
        android:paddingRight="@dimen/size_10">
        <ImageView
            android:layout_width="@dimen/size_21"
            android:layout_height="@dimen/size_21"
            android:src="@drawable/ic_xiaoxitongzhi"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/size_30"
            android:text="新消息通知"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_right_jt"/>
    </RelativeLayout>
    <View style="@style/line_view_horizontal"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/size_16"
        android:paddingBottom="@dimen/size_16"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/size_10"
        android:paddingRight="@dimen/size_10">
        <ImageView
            android:layout_width="@dimen/size_21"
            android:layout_height="@dimen/size_21"
            android:src="@drawable/ic_guanyu"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/size_30"
            android:text="关于律树云服务平台"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_right_jt"/>
    </RelativeLayout>
    <View style="@style/line_view_7"/>
    <RelativeLayout
        android:id="@+id/rl_update"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/size_16"
        android:paddingBottom="@dimen/size_16"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/size_10"
        android:paddingRight="@dimen/size_10">
        <ImageView
            android:layout_width="@dimen/size_21"
            android:layout_height="@dimen/size_21"
            android:src="@drawable/ic_update"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/size_30"
            android:text="版本更新"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:textColor="@color/black_03"
            android:text="版本号1.0"/>
    </RelativeLayout>
    <View style="@style/line_view_7"/>

    <TextView
        android:id="@+id/tv_exit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/size_15"
        android:textColor="@color/blue_01"
        android:text="退出登录"/>
</LinearLayout>
