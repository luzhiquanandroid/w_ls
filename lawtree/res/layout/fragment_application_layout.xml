<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@android:color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
     <include layout="@layout/layout_title"/>

     <TextView
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:layout_marginTop="@dimen/size_16"
         android:text="生产模块"
         android:textColor="@color/black_04"
         android:textStyle="bold"
         android:paddingLeft="@dimen/size_20"/>

     <LinearLayout
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:orientation="horizontal">
          <LinearLayout
              android:id="@+id/ll_shenchan_plan"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginTop="@dimen/size_12"
              android:layout_marginLeft="@dimen/size_23"
              android:gravity="center"
              android:orientation="vertical">
               <ImageView
                   android:layout_width="@dimen/size_42"
                   android:layout_height="@dimen/size_42"
                   android:src="@drawable/ic_shengcanjihua"/>
               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:textSize="@dimen/text_size_12"
                   android:layout_marginTop="@dimen/size_5"
                   android:text="生产计划"/>
          </LinearLayout>
          <LinearLayout
              android:id="@+id/ll_task_manager"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginTop="@dimen/size_12"
              android:layout_marginLeft="@dimen/size_47"
              android:gravity="center"
              android:orientation="vertical">
               <ImageView
                   android:layout_width="@dimen/size_42"
                   android:layout_height="@dimen/size_42"
                   android:src="@drawable/renwuguanli"/>
               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:textSize="@dimen/text_size_12"
                   android:layout_marginTop="@dimen/size_5"
                   android:text="任务管理"/>
          </LinearLayout>
          <LinearLayout
              android:id="@+id/ll_shenchan_date"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginTop="@dimen/size_12"
              android:layout_marginLeft="@dimen/size_47"
              android:gravity="center"
              android:orientation="vertical">
               <ImageView
                   android:layout_width="@dimen/size_42"
                   android:layout_height="@dimen/size_42"
                   android:src="@drawable/shengchanpaidan"/>
               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:textSize="@dimen/text_size_12"
                   android:layout_marginTop="@dimen/size_5"
                   android:text="生产排单"/>
          </LinearLayout>
     </LinearLayout>

     <TextView
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:layout_marginTop="@dimen/size_29"
         android:text="库存模块"
         android:textColor="@color/black_04"
         android:textStyle="bold"
         android:paddingLeft="@dimen/size_20"/>

     <LinearLayout
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:orientation="horizontal">
          <LinearLayout
              android:id="@+id/ll_kucun"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginTop="@dimen/size_12"
              android:layout_marginLeft="@dimen/size_23"
              android:gravity="center"
              android:orientation="vertical">
               <ImageView
                   android:layout_width="@dimen/size_42"
                   android:layout_height="@dimen/size_42"
                   android:background="@drawable/rectangle"
                   android:src="@drawable/kucunchaxun"/>
               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:textSize="@dimen/text_size_12"
                   android:layout_marginTop="@dimen/size_5"
                   android:text="库存查询"/>
          </LinearLayout>
          <LinearLayout
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginTop="@dimen/size_12"
              android:layout_marginLeft="@dimen/size_47"
              android:visibility="gone"
              android:gravity="center"
              android:orientation="vertical">
               <ImageView
                   android:layout_width="@dimen/size_42"
                   android:layout_height="@dimen/size_42"
                   android:src="@drawable/panku"/>
               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:textSize="@dimen/text_size_12"
                   android:layout_marginTop="@dimen/size_5"
                   android:text="盘库"/>
          </LinearLayout>
     </LinearLayout>

     <TextView
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:layout_marginTop="@dimen/size_29"
         android:text="订单模块"
         android:textColor="@color/black_04"
         android:textStyle="bold"
         android:paddingLeft="@dimen/size_20"/>

     <LinearLayout
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:orientation="horizontal">
          <LinearLayout
              android:id="@+id/ll_dingdan"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginTop="@dimen/size_12"
              android:layout_marginLeft="@dimen/size_23"
              android:gravity="center"
              android:orientation="vertical">
               <ImageView
                   android:layout_width="@dimen/size_42"
                   android:layout_height="@dimen/size_42"
                   android:src="@drawable/ic_dingdanguanli"/>
               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:textSize="@dimen/text_size_12"
                   android:layout_marginTop="@dimen/size_5"
                   android:text="订单管理"/>
          </LinearLayout>
          <LinearLayout
              android:id="@+id/ll_xiaodan"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginTop="@dimen/size_12"
              android:layout_marginLeft="@dimen/size_47"
              android:gravity="center"
              android:orientation="vertical">
               <ImageView
                   android:layout_width="@dimen/size_42"
                   android:layout_height="@dimen/size_42"
                   android:src="@drawable/xiaodanguanli"/>
               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:textSize="@dimen/text_size_12"
                   android:layout_marginTop="@dimen/size_5"
                   android:text="销单管理"/>
          </LinearLayout>
          <LinearLayout
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginTop="@dimen/size_12"
              android:layout_marginLeft="@dimen/size_47"
              android:visibility="gone"
              android:gravity="center"
              android:orientation="vertical">
               <ImageView
                   android:layout_width="@dimen/size_42"
                   android:layout_height="@dimen/size_42"
                   android:src="@drawable/wanglaiguanli"/>
               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:textSize="@dimen/text_size_12"
                   android:layout_marginTop="@dimen/size_5"
                   android:text="往来管理"/>
          </LinearLayout>

          <LinearLayout
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginTop="@dimen/size_12"
              android:layout_marginLeft="@dimen/size_47"
              android:visibility="gone"
              android:gravity="center"
              android:orientation="vertical">
               <ImageView
                   android:layout_width="@dimen/size_42"
                   android:layout_height="@dimen/size_42"
                   android:src="@drawable/zijinliushui"/>
               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:textSize="@dimen/text_size_12"
                   android:layout_marginTop="@dimen/size_5"
                   android:text="资金流水"/>
          </LinearLayout>

     </LinearLayout>
</LinearLayout>