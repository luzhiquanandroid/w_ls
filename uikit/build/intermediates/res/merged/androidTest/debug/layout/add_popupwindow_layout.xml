<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="@dimen/size_120"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_bg_add"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/ll_send_qunliao"
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_38"
            android:layout_marginTop="@dimen/size_4"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/size_18">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_send_qunliao" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/size_9"
                android:text="发起群聊"
                android:textColor="#000000"
                android:textSize="@dimen/text_size_14" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_0.1"
            android:layout_marginLeft="@dimen/size_1"
            android:layout_marginRight="@dimen/size_1"
            android:background="#fff0f0f0" />

        <LinearLayout
            android:id="@+id/ll_saoyisao"
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_38"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/size_18">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_saoyisao" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/size_9"
                android:text="扫一扫"
                android:textColor="#000000"
                android:textSize="@dimen/text_size_14" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_0.1"
            android:layout_marginLeft="@dimen/size_1"
            android:layout_marginRight="@dimen/size_1"
            android:background="#fff0f0f0" />

        <LinearLayout
            android:id="@+id/ll_add_friend"
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_38"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/size_18">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_tianjiapengyou" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/size_9"
                android:text="添加好友"
                android:textColor="#000000"
                android:textSize="@dimen/text_size_14" />
        </LinearLayout>
    </LinearLayout>

</android.support.constraint.ConstraintLayout>