<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size_91"
        android:textSize="@dimen/text_size_21"
        android:layout_marginLeft="@dimen/size_36"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:text="注册"/>

    <EditText
        android:id="@+id/et_account"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColorHint="@color/text_hint"
        android:layout_marginTop="@dimen/size_35"
        android:layout_marginLeft="@dimen/size_36"
        android:layout_marginRight="@dimen/size_36"
        android:textSize="@dimen/text_size_15"
        android:hint="请输入您的手机号"
        android:background="@null"/>
    <View
        android:layout_marginTop="@dimen/size_5"
        android:layout_marginLeft="@dimen/size_36"
        android:layout_marginRight="@dimen/size_36"
        style="@style/line_view_3"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size_42"
        android:layout_marginLeft="@dimen/size_36"
        android:layout_marginRight="@dimen/size_36">
        <EditText
            android:id="@+id/et_vertify"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColorHint="@color/text_hint"
            android:textSize="@dimen/text_size_15"
            android:hint="请输入验证码"
            android:background="@null"/>

        <TextView
            android:id="@+id/tv_vertify"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size_15"
            android:layout_alignParentRight="true"
            android:textColor="@color/black_02"
            android:text="获取验证码"/>
    </RelativeLayout>

    <View
        android:layout_marginTop="@dimen/size_5"
        android:layout_marginLeft="@dimen/size_36"
        android:layout_marginRight="@dimen/size_36"
        style="@style/line_view_3"/>

    <TextView
        android:id="@+id/tv_next"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_38"
        android:layout_marginTop="@dimen/size_36"
        android:layout_marginLeft="@dimen/size_36"
        android:layout_marginRight="@dimen/size_36"
        android:gravity="center"
        android:background="@drawable/bg_add"
        android:textColor="@color/white"
        android:text="下一步"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="@dimen/size_12"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size_11"
            android:text="点击“下一步”即表示您同意"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/blue_02"
            android:textSize="@dimen/text_size_11"
            android:text="《用户服务协议》"/>
    </LinearLayout>



</LinearLayout>
