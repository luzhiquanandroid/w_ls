<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/size_7"
        android:paddingLeft="@dimen/size_10"
        android:paddingTop="@dimen/size_7">

        <ImageView
            android:id="@+id/ic_team"
            android:layout_width="@dimen/size_30"
            android:layout_height="@dimen/size_30"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_group" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/size_13"
            android:layout_toRightOf="@id/ic_team"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_team_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="高级群"
                android:textColor="#000000"
                android:textSize="@dimen/text_size_13" />

            <TextView
                android:id="@+id/tv_team_number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="0人"
                android:textColor="#A7A7A7"
                android:textSize="@dimen/text_size_11" />
        </LinearLayout>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_0.1"
        android:layout_marginLeft="@dimen/size_10"
        android:background="#fff0f0f0" />
</LinearLayout>